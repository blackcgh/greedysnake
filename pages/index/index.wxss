/**index.wxss**/
.snake-index {
  width: 700rpx;
  margin: 0 auto;
}

.snake-info {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  font-size: 30rpx;
}

.snake-info picker {
  padding: 10rpx 20rpx;
  background-color: #eee;
  border-radius: 15rpx;
}

.snake-info text {
	padding: 10rpx 20rpx;
  background-color: #eee;
  border-radius: 15rpx;
}

.snake-state button {
  margin-bottom: 20rpx;
}

.snake-content {
  width: 700rpx;
  height: 800rpx;
}

.row {
  width: 100%;
  height: 20rpx;
  overflow: hidden;
}

.col {
  float: left;
  width: 20rpx;
  height: 20rpx;
  background-color: #525288;
}

.unit-1 {
  background-color: #fa8231;
}

.unit-2 {
  background-color: #eb3b5a;
}

.snake-fn {
  display: flex;
  height: calc(100vh - 100rpx - 100rpx - 800rpx);
  color: #fff;
}

.btn-speed {
  flex: 2;
  display: flex;
  align-items: center;
  padding-left: 50rpx;
}

.btn-speed view {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: #55efc4;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.direction {
  flex: 3;
  position: relative;
}

.direction view {
  position: absolute;
  width: 90rpx;
  height: 90rpx;
  background-color: #55efc4;
  font-size: 36rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.dir-t {
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.dir-b {
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

.dir-l {
  top: 50%;
  left: 15%;
  transform: translateY(-50%);
}

.dir-r {
  top: 50%;
  right: 15%;
  transform: translateY(-50%);
}

view.active {
  background-color: #00b894;
}
